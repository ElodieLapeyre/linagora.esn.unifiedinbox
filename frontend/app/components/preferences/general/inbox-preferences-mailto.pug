ng-form(name="form")
  .card
    .card-header
      h2 #{__('Email Links')}
    .card-body.card-padding
      .inbox-preferences-mailto.flex-vertical-centered
        .inbox-preferences-mailto-toggle.flex-grow
          toggle-switch(ng-model='$ctrl.useEmailLinks', form="form")
          span #{__('Open email links with OpenPaaS')}
        a.inbox-preferences-mailto-test.btn.btn-link(ng-if="$ctrl.useEmailLinks", ng-href="mailto:{{ $ctrl.mailtoTargetEmail }}", target="_blank") #{__('Test')}

      .inbox-preferences-mailto-information.flex-vertical-centered(ng-if="$ctrl.useEmailLinks")
        i.mdi.mdi-lightbulb-outline
        | #{__('In order to make sure that you can open email links, please')}
        a.btn.btn-primary.inbox-preferences-mailto-authorize(ng-click="$ctrl.authorizeBrowser()") #{__('authorize your browser')}
