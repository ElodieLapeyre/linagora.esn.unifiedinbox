.modal(tabindex="-1", role="dialog")
  .modal-dialog
    .modal-content
      .modal-header
        h4.modal-title #{__('Disable forwarding?')}
      .modal-body
        p #{__('This will remove forwardings of all users in domain after save. Do you wish to continue?')}
      .modal-footer
        button.btn.btn-link(ng-click="$ctrl.cancelBtnClick(); $hide()")
          | #{__('Cancel')}
        button.btn.btn-danger(ng-click="$hide()")
          | #{__('Disable')}
