inbox-identity-edit.modal.full-screen
  form.modal-dialog(name="form", esn-submit="$ctrl.onRemoveBtnClick()", ng-init="$ctrl.init()")
    .modal-content
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-label="Close", ng-click="$hide()")
          span(aria-hidden="true") &times;
        h4.modal-title #{__('Remove identity')}
      .modal-body
        p #{__('Remove identity')}
          b.m-l-5 {{::$ctrl.identity.name}}
      .modal-footer.flex
        .flex-vertical-centered.flex-end
          button.btn.btn-link(type="button", ng-click="$hide()")
            | #{__('Cancel')}
          button.btn.btn-primary(type="submit", ng-disabled="form.$invalid" ng-click="$hide()")
            | #{__('Remove')}
