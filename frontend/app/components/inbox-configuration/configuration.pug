.inbox-main-content.configuration.card
  ul.esn-tab.configuration-header
    li.btn-wave(ui-sref-active="active")
      a(href="", ui-sref="unifiedinbox.configuration.vacation", ui-sref-opts="{ location: 'replace' }")
        | #{__('Vacation')}
    li.btn-wave(ui-sref-active="active")
      a(href="", ui-sref="unifiedinbox.configuration.identities", ui-sref-opts="{ location: 'replace' }")
        | #{__('Identity')}
    li.btn-wave(ng-if="$ctrl.isFoldersSharingEnabled", ui-sref-active="active")
      a(href="", ui-sref="unifiedinbox.configuration.shared", ui-sref-opts="{ location: 'replace' }")
        | #{__('Shared folders')}
    li.btn-wave(ui-sref-active="active")
      a(href="", ui-sref="unifiedinbox.configuration.readreceipts", ui-sref-opts="{ location: 'replace' }")
        | #{__('Receipts')}
    li.btn-wave(ng-if="$ctrl.isForwardingEnabled", ui-sref-active="active")
      a(href="", ui-sref="unifiedinbox.configuration.forwardings", ui-sref-opts="{ location: 'replace' }")
        | #{__('Forwardings')}
    li.btn-wave(ng-if="$ctrl.isForwardingEnabled", ui-sref-active="active")
      a(href="", ui-sref="unifiedinbox.configuration.filters", ui-sref-opts="{ location: 'replace' }")
        | #{__('Filters')}
    li.btn-wave(ui-sref-active="active", dynamic-directive="inbox-configuration-tabs")

  ui-view.configuration-content(name="configuration", noanimation)
