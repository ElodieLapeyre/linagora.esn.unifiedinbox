form.form-horizontal.compose.ng-cloak(fullscreen-edit-form-container)

  .compose-header
    .row
      .recipients.col-xs-11
        .form-group
          label.col-xs-1.control-label(for="to") #{__('To')}
          .col-xs-10
            recipients-auto-complete(ng-model="email.rcpt.to", template="fullscreen-recipients-auto-complete")
        .form-group.ng-hide(ng-hide="isCollapsed")
          label.col-xs-1.control-label(for="cc") #{__('CC')}
          .col-xs-10
            recipients-auto-complete(ng-model="email.rcpt.cc", template="fullscreen-recipients-auto-complete")
        .form-group.ng-hide(ng-hide="isCollapsed")
          label.col-xs-1.control-label(for="bcc") #{__('BCC')}
          .col-xs-10
            recipients-auto-complete(ng-model="email.rcpt.bcc", template="fullscreen-recipients-auto-complete")
      .more-recipients.col-xs-1(ng-class="{ 'isCollapsed': isCollapsed }")
        span(ng-click="isCollapsed = !isCollapsed")
            i.mdi.mdi-chevron-up

    input.form-control.compose-subject(type="text", placeholder="#{__('Subject')}", ng-model="email.subject")

  .compose-body(ng-model="email.htmlBody", ng-class="{ 'isCollapsed': isCollapsed }", editor-placeholder="#{__('Start writing your email here')}")
    summernote(config="summernoteOptions")