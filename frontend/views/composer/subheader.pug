extends /modules/subheader/fullwidth-subheader.pug

block left
  inbox-subheader-close-button(ng-click='$ctrl.onHide()')

block right
  .inbox-composer-buttons.flex-vertical-centered
    div(dynamic-directive='inboxMobileComposerExtraButtons')
    inbox-composer-attachments-selector(attachments="$ctrl.message.attachments", upload="$ctrl.upload($attachment)", on-attachments-update="$ctrl.message.attachments = $attachments")
    button.send.btn.btn-link.flex-vertical-centered.hidden-xs(ng-click='$ctrl.send()', ng-disabled="$ctrl.isSendingMessage")
      | #{__('Send')}
      i.mdi.mdi-send.mdi-margin-left
    button.send.btn.btn-link.btn-icon.visible-xs(ng-click='$ctrl.send()', ng-disabled="$ctrl.isSendingMessage")
      i.mdi.mdi-send
    button.btn.btn-link.btn-icon(feature-flag="linagora.esn.unifiedinbox.drafts", action-list="/unifiedinbox/views/composer/more-button.html")
      i.mdi.mdi-dots-vertical
