.list-emails

  .groupedEmails(ng-repeat="group in groupedEmails" ng-if="group.emails.length > 0")
    .block-header
      h2 {{::group.name}}

    .card.listview.lv-bordered.lv-lg
      .lv-body
        .lv-item.media(ng-repeat="email in group.emails")
          div.clickable(ng-click="ctrl.openEmail(email)")
            .media-body(ng-class="::{bold: email.isUnread}")
              .lv-title.text-right.pull-right-sm
                i.email-status-icon.mdi.mdi-attachment(ng-if='::email.hasAttachment')
                ng-include(src="'/unifiedinbox/views/partials/email-star'")
                span.date {{::email.date | date: group.dateFormat}}
              .avatarify
                .lv-title {{::email.subject}}
                emailer.lv-title(emailer="::email.from")
                .clearfix
            .lv-small.preview {{::email.preview}}

  inbox-fab