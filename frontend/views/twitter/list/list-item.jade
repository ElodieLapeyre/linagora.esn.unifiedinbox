.twitter-list-item
  .list-image.badge-container
    img(ng-src='{{ ::item.author.avatar }}')
    i.mdi.mdi-twitter-box.twitter-icon-overlay
  .media-body
    .flex-space-between
      .flex-start.ellipsis
        .lv-title {{ ::item.author.displayName }}
      .date-container {{ ::item.date | date: group.dateFormat }}
    .flex-space-between
      .lv-title(ng-bind-html="::item.author.screenName | autolink")
  .lv-small.preview(ng-bind-html="::item.text | autolink")
