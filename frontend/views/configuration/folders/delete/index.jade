.modal
  .modal-dialog
    .modal-content
      .modal-header
        h4.modal-title #{__('Delete folder?')}
      .modal-body(ng-if="::message")
        p
          | {{ ::message }}
      .modal-footer
        button.btn.btn-default(type="button", ui-sref="^") #{__('Cancel')}
        button.btn.btn-default(type="button", esn-submit="ctrl.deleteFolder()") #{__('Delete')}
