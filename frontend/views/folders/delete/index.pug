.modal.inbox-root.inbox-modal
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss="modal", aria-label="Close", ng-click="$hide()")
          span(aria-hidden="true") &times;
        h4.modal-title #{__('Delete folder?')}
      .modal-body(ng-if="::message")
        p
          | {{ ::message }}
      .modal-footer
        button.btn.btn-link(type="button", ng-click="$hide()") #{__('Cancel')}
        button.btn.btn-primary(type="submit", ng-click="ctrl.deleteFolder(); $hide()") #{__('Delete')}
