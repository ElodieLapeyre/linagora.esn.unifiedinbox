div
  .lv-item.clickable.menu-heading(ng-if="::getTwitterAccounts().length > 0")
    .title(ui-sref='unifiedinbox.twitter')
      i.inbox-icon.mdi.mdi-twitter
      .text #{__('Twitter')}

  .lv-item.clickable(ng-repeat="account in ::getTwitterAccounts()", ui-sref="unifiedinbox.twitter.account({ username: account.data.username })", ui-sref-opts="{ reload: true }", ui-sref-active="selected", title="{{ ::account.data.username }}")
    | {{::account.data.username}}
