.inbox-root.inbox-aside(ng-class="{ 'is-vacation-activated' : inbox.vacationActivated }")
  .lv-item.menu-root.menu-heading.hidden-md
    .media
      .media-body
        .title
          .text #{__('Inbox')}

  .lv-item.menu-root.menu-heading.visible-md
    .media
      .pull-right
        .lv-actions.actions
          li.dropdown
            a(href='', data-toggle='dropdown', aria-expanded='true', title="#{__('Add new account')}")
              i.mdi.mdi-plus
            ul(dynamic-directive='accounts-item-anchorpoint').dropdown-menu.dropdown-menu-right
      .media-body
        .title
          .text #{__('Inbox')}
  .listview
    .lv-item.clickable.inbox-item-with-icon.folder-with-icon.waves-effect.waves-classic(title="#{__('Unified Inbox')}", ui-sref-active="selected", ui-sref="unifiedinbox.inbox({ type: '', account: '', context: '' })")
      .badge-container
        .badge
        i.inbox-icon.mdi.mdi-folder-multiple
      .menu-item
        span.menu-item-inner
          bdi #{__('Unified Inbox')}

  inbox-sidebar-twitter
  .inbox-sidebar-dd(dynamic-directive='inbox-sidebar')
  hr
  inbox-sidebar-email
  inbox-sidebar-configuration-button
